<footer>
    <div class="footer">
        <div class="container">
            <div class="footer__main">
                <div class="grid grid--reverse">
                    <div class="grid__item width-6 width-tablet-12">
                        <h4 class="footer__title">Connect with us</h4>
                        <div class="footer__newsletter">
                            <p>Sign up for our weekly newsletter! We inform you about the latest Newcomers, brand new records and events.</p>

                            <form method="post" class="footer__newsletter-form">
                                <label class="footer__newsletter-input-label">
                                    <input type="email" name="email" placeholder="E-Mail" class="footer__newsletter-input"/>
                                </label>
                                <button type="submit" class="footer__newsletter-button">SIGN UP</button>
                            </form>
                        </div>
                    </div>

                    <div class="grid__item width-6 width-tablet-12">
                        <div class="grid">
                            <div class="grid__item width-6">
                                <h4 class="footer__title">Contact</h4>

                                {% set contact = sulu_snippet_load_by_area('contact').content.contact.entity %}
                                {% set address = contact.accountAddresses[0].address %}

                                <div class="footer__contact">
                                    <p>{{ address.street ~ ' ' ~ address.number }},<br/>
                                        {{ address.zip ~ ' ' ~ address.city }},<br/>
                                        {{ country(address.countryCode) }}</p>
                                    <a href="tel:{{ contact.mainPhone }}" class="footer__contact-link">{{ contact.mainPhone }}</a>
                                    <a href="mailto:{{ contact.mainEmail }}" class="footer__contact-link">{{ contact.mainEmail }}</a>
                                </div>
                            </div>

                            <div class="grid__item width-6">
                                <h4 class="footer__title">Quick Links</h4>
                                <div class="footer__quicklinks">
                                    {% for item in sulu_navigation_root_flat('footer', 1) %}
                                        <a href="{{ sulu_content_path(item.url) }}" title="{{ item.title }}" class="footer__quicklink">
                                            {{ item.title }}
                                        </a>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="footer__imprint">
                <div class="footer__imprint-item footer__imprint-item--copyright">&copy; Soundmanagement Corporation 2019</div>
                <div class="footer__imprint-item">
                    <a href="#" class="footer__imprint-link">Privacy policy and terms of use</a>
                </div>
                <div class="footer__imprint-item">
                    <a href="#" class="footer__imprint-link">Cookie policy</a>
                </div>
                <div class="footer__imprint-item">
                    <a href="#" class="footer__imprint-link">Safety and recalls</a>
                </div>
            </div>
        </div>
    </div>

    <div class="social-footer">
        <div class="container">
            <div class="social-footer__links">
                <a href="#" class="social-footer__link icon icon--facebook"></a>
                <a href="#" class="social-footer__link icon icon--instagram"></a>
                <a href="#" class="social-footer__link icon icon--youtube"></a>
                <a href="#" class="social-footer__link icon icon--spotify"></a>
            </div>
        </div>
    </div>
</footer>
