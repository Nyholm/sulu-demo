{% extends 'base.html.twig' %}

{% block contentHeader %}
    {% include 'includes/header.html.twig' with { type: 'article' } %}
{% endblock %}

{% block content %}
    {% set author = sulu_resolve_contact(author) %}

    {% if author %}
        <div class="article-info">
            <div class="posted-by">{{ 'Posted by'|trans }} <span>{{ author.fullName }}</span></div>
        </div>
    {% endif %}

    {% include 'includes/blocks.html.twig' with { blocks: content.blocks } %}
{% endblock %}
